# Workflow Hub Configuration
# Copy to .env and customize

# ============================================
# Database Configuration (PostgreSQL)
# ============================================
POSTGRES_USER=wfhub
POSTGRES_PASSWORD=your_secure_password_here
POSTGRES_DB=wfhub
DATABASE_URL=postgresql+psycopg2://wfhub:your_secure_password_here@localhost:5432/wfhub

# ============================================
# Django Settings
# ============================================
# Generate a new key: python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"
DJANGO_SECRET_KEY=your_django_secret_key_here

# ============================================
# Workflow Pipeline Settings
# ============================================
# Default max iterations for retry loop
WORKFLOW_MAX_ITER=3

# Default project name (leave blank to use current directory name)
WORKFLOW_PROJECT=

# Default working directory (leave blank to use current directory)
WORKFLOW_DIR=

# Workflow Hub URL (for agent runner)
WORKFLOW_HUB_URL=http://localhost:8000

# ============================================
# LLM Configuration (for agents)
# ============================================
# Goose/Ollama backend
GOOSE_PROVIDER=ollama
OLLAMA_HOST=http://localhost:12434/engines/llama.cpp
GOOSE_MODEL=ai/qwen3-coder:latest

# Vision Model (for image/screenshot analysis)
VISION_MODEL=ai/qwen3-vl
VISION_API_URL=http://localhost:12434/engines/llama.cpp/v1/chat/completions
VISION_PREPROCESS=true
VISION_TIMEOUT=120

# Alternative: OpenAI-compatible API
# OPENAI_API_KEY=your_api_key_here
# OPENAI_BASE_URL=https://api.openai.com/v1
